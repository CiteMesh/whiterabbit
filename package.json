{
  "name": "whiterabbit-monorepo",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "npm --workspace apps/wrbt-web run dev",
    "dev:api": "npm --workspace apps/wrbt-api run dev",
    "dev:all": "npm run dev & npm run dev:api",
    "build": "npm --workspace apps/wrbt-web run build",
    "build:api": "npm --workspace apps/wrbt-api run build",
    "lint": "npm --workspace apps/wrbt-web run lint",
    "db:push": "npm --workspace apps/wrbt-api run db:push",
    "seed": "npm --workspace apps/wrbt-api run seed",
    "check": "npm --workspace apps/wrbt-api run check && npm --workspace apps/wrbt-web run lint"
  },
  "engines": {
    "node": ">=18.17.0"
  },
  "dependencies": {
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-slot": "^1.2.4",
    "@radix-ui/react-tabs": "^1.1.13",
    "class-variance-authority": "^0.7.1",
    "lucide-react": "^0.563.0",
    "react": "^19.2.4",
    "tw-animate-css": "^1.4.0"
  }
}
