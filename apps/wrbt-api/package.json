{
  "name": "@wrbt/api",
  "version": "0.1.0",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "NODE_ENV=development tsx server/index.ts",
    "build": "tsc",
    "start": "NODE_ENV=production node dist/server/index.js",
    "check": "tsc --noEmit",
    "db:push": "drizzle-kit push",
    "seed": "tsx script/seed-db.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@wrbt/types": "*",
    "bcrypt": "^6.0.0",
    "cors": "^2.8.6",
    "drizzle-orm": "^0.39.3",
    "drizzle-zod": "^0.7.0",
    "express": "^5.0.1",
    "express-session": "^1.18.1",
    "pg": "^8.16.3",
    "zod": "^3.25.76",
    "zod-validation-error": "^4.0.2"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.0",
    "@types/express-session": "^1.18.0",
    "@types/node": "^20.19.0",
    "@types/pg": "^8.11.10",
    "@types/supertest": "^6.0.3",
    "@vitest/ui": "^4.0.18",
    "drizzle-kit": "^0.31.8",
    "supertest": "^7.2.2",
    "tsx": "^4.20.5",
    "typescript": "^5.6.3",
    "vitest": "^4.0.18"
  }
}
