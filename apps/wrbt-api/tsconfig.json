{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": ".",
    "noEmit": false,
    "module": "ESNext",
    "target": "ES2022",
    "lib": ["ES2022"],
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@shared/*": ["./shared/*"],
      "@wrbt/types": ["../../packages/types"]
    }
  },
  "include": ["server/**/*", "shared/**/*", "script/**/*"],
  "exclude": ["node_modules", "dist"]
}
