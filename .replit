modules = ["nodejs-20"]

# Development run command
run = "npm run dev:api"

[deployment]
build = ["sh", "-c", "npm install && npm --workspace apps/wrbt-api run build"]
run = ["sh", "-c", "node start-api.js"]
deploymentTarget = "cloudrun"

[[ports]]
localPort = 5000
externalPort = 80

[nix]
channel = "stable-25_05"
